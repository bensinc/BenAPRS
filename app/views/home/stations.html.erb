<div class="header">

    <h1>Stations</h1>

</div>



<table class="pure-table">
    <thead>
        <tr>
	        <th>Time</th>
            <th>Callsign</th>            
            <th>Position</th>
            <th>Message</th>
        </tr>
    </thead>

    <tbody>
    		<% for station in @stations %>
	        <tr>
	            <td><%= time_ago_in_words(station.updated_at) %></td>
	            <td><%= station.callsign %></td>
	            <td><%= station.latitude %>, <%= station.longitude %></td>
	            <td><%= station.packets.last.message %></td>
	        </tr>
        <% end %>

        
    </tbody>
</table>
    
